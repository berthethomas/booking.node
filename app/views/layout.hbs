<!doctype html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/font-awesome.min.css">
    <link rel="stylesheet" href="/css/main.css">
    <link rel="stylesheet" href="/css/theme.bootstrap.min.css">

    <script src="/js/jquery.min.js" type='text/javascript'></script>
    <script src="//ajax.googleapis.com/ajax/libs/jqueryui/1.9.2/jquery-ui.min.js"></script>
    <script src="/js/bootstrap.min.js" type='text/javascript'></script>
    <script src="/js/jquery.tablesorter.min.js" type='text/javascript'></script>
    <script src="/js/jquery.tablesorter.widget.min.js" type='text/javascript'></script>

    <title>{{title}}</title>
</head>
<body>
{{#if messages.error}}
    <div id="flash" class="flash-notice bottom-info col-md-offset-8 col-md-4 alert alert-danger text-center">
        <a href="#" class="close">X</a>
        <p class="text-center"> {{messages.error}}</p>
    </div>
{{/if}}

{{#if messages.success}}
    <div id="flash" class="flash-notice bottom-info col-md-offset-8 col-md-4 alert alert-success text-center">
        <a href="#" class="close">X</a>
        <p class="text-center"> {{messages.success}}</p>
    </div>
{{/if}}
{{{body}}}
</body>
</html>
