<!doctype html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="/assets/css/bootstrap.min.css">
    <link rel="stylesheet" href="/assets/css/font-awesome.min.css">
    <link rel="stylesheet" href="/assets/css/main.css">
    <link rel="stylesheet" href="/assets/css/theme.bootstrap.min.css">

    <script src="/assets/js/jquery.min.js" type='text/javascript'></script>
    <script src="/assets/js/bootstrap.min.js" type='text/javascript'></script>
    <script src="/assets/js/jquery.tablesorter.js" type='text/javascript'></script>
    <script src="/assets/js/jquery.tablesorter.widgets.js" type='text/javascript'></script>
    <script src="/assets/js/jquery.tablesorter.widget.scroller.js" type='text/javascript'></script>

    <title>{{title}}</title>
</head>
<body>
{{#if messages.error}}
    <div id="flash" class="flash-notice bottom-info col-md-offset-8 col-md-4 alert alert-danger text-center" style="margin-top : 50px;">
        <a href="#" class="close">X</a>
        <p class="text-center"> {{messages.error}}</p>
    </div>
    <script>
        $(document).ready(function() {
            $('.close').on('click', function() {
                $('#flash').remove();
            });
        });
    </script>
{{/if}}

{{#if messages.success}}
    <div id="flash" class="flash-notice bottom-info col-md-offset-8 col-md-4 alert alert-success text-center" style="margin-top : 50px;">
        <a href="#" class="close">X</a>
        <p class="text-center"> {{messages.success}}</p>
    </div>
    <script>
        $(document).ready(function() {
            $('.close').on('click', function() {
                $('#flash').remove();
            });
        });
    </script>
{{/if}}

{{#if session.auth }}
    <nav class="navbar navbar-default navbar-fixed-top" role="navigation" style="margin-bottom : 150px;">
        <div class="container">

            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <i class="icon-menu"></i> Menu
                </button>
                <a class="navbar-brand" href="/">Booking.node</a>
            </div>

            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    <li>
                        <a href="/logement" title="Start Bootstrap News, Guides, and Tutorials">Logements</a>
                    </li>
                    <li>
                        <a href="/logement/map" title="Start Bootstrap News, Guides, and Tutorials">Carte</a>
                    </li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" title="Premium Bootstrap Themes &amp; Templates"><i class="icon-star"></i> Mon compte <b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li>
								<a href="/profil/{{session.user._id}}"><i class="icon-handbag fa-user"></i>Mon profil</a>
                            </li>
                            <li>
                                <a href="/logout"><i class="icon-handbag fa-fa-sign-out"></i>Deconnexion</a>
                            </li>
                        </ul>
                    </li>
                    <li>
                        <a href="#" data-toggle="modal" data-target="#searchModal"><i class="icon-magnifier"></i> <span class="hidden-lg hidden-md hidden-sm">Search Themes</span></a>
                    </li>
                </ul>
            </div>

        </div>
    </nav>
{{/if}}
<div class="container-fluid" style="margin-top: 60px;">
{{{body}}}
</div>
</body>
</html>
